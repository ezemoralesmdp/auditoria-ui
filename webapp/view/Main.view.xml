<mvc:View
    controllerName="auditui.auditoriaui.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <Page>
        <content>
            <Panel 
                headerText="Menu" 
                class="sapUiMediumMargin" 
                width="auto"
            >
                <HBox 
                    class="sapUiTinyMargin"
                >
                    <GenericTile
                        header="Auditoria"
                        subheader="Consulta + ABM"
                        press="onViewAuditoria"
                    >
                        <TileContent
                            footer="Click para accionar">
                            <ImageContent src="sap-icon://write-new" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile
                        header="Tipos de auditoria"
                        subheader="Consulta"
                        press="onViewTiposAuditoria"
                        class="sapUiMediumMarginBegin"
                    >
                        <TileContent
                            footer="Click para consultar">
                            <ImageContent src="sap-icon://browse-folder" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile
                        header="RecomendaciÃ³n"
                        subheader="Consulta"
                        press="onViewRecomendacion"
                        class="sapUiMediumMarginBegin"
                    >
                        <TileContent
                            footer="Click para consultar">
                            <ImageContent src="sap-icon://search" />
                        </TileContent>
                    </GenericTile>
                </HBox>
            </Panel>
            <Panel 
                headerText="Sitios" 
                class="sapUiMediumMargin" 
                width="auto"
            >
                <HBox>
                    <GenericTile
                        header="SAP"
                        subheader="SAP Software"
                        mode="LineMode"
                        press="onLinkSitioOficialSap"
                        sizeBehavior="Responsive"
                        class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                    />
                    <GenericTile
                        header="Ledesma"
                        subheader="Grupo Ledesma"
                        mode="LineMode"
                        press="onLinkSitioOficialLedesma"
                        sizeBehavior="Responsive"
                        class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                    />
                    <GenericTile
                        header="Emmsa"
                        subheader="IT Services"
                        mode="LineMode"
                        press="onLinkSitioOficialEmmsa"
                        sizeBehavior="Responsive"
                        class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                    />
                </HBox>
            </Panel>
        </content>
    </Page>
</mvc:View>