<mvc:View
    controllerName="auditui.auditoriaui.controller.Recomendacion"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <Page>
        <content>
            <OverflowToolbar>
                <SearchField 
                    liveChange="onRecomendacionSearch" 
                    width="100%"
                >
                </SearchField>
            </OverflowToolbar>
            <List
                id="RecomendacionList"
                headerText="Recomendaciones"
                items="{
                    path: '/Recomendacion',
                    sorter: {
                        path: 'TITULO'
                    }
                }"
                mode="SingleSelectMaster"
                itemPress="onPressRecomendacion"
                growing="true"
                growingThreshold="3"
            >
                <items>
                    <StandardListItem
                        title="{TITULO}"
                        description="ID: {ID}" 
                        icon="sap-icon://accept"
                        type="Active"
                    />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>